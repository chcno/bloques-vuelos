<h1 class="text-3xl font-bold mb-8 text-gray-800">Crear Mantenimiento</h1>

<%= form_with model: [:admin, @maintenance], local: true, class: "space-y-6 bg-white p-8 rounded-lg shadow max-w-2xl mx-auto" do |f| %>

  <!-- Aircraft -->
  <div>
    <%= f.label :aircraft_id, "AviÃ³n", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.collection_select :aircraft_id, Aircraft.all, :id, :identifier,
          { prompt: "Seleccione un aviÃ³n" },
          class: "block w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Start Time -->
  <div>
    <%= f.label :start_time, "Inicio", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.datetime_select :start_time,
          class: "block w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- End Time -->
  <div>
    <%= f.label :end_time, "Fin", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.datetime_select :end_time,
          class: "block w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Reason -->
  <div>
    <%= f.label :reason, "Motivo", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_field :reason,
          placeholder: "Ej. Cambio de aceite",
          class: "block w-full border border-gray-300 rounded-md py-2 px-3 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
  </div>

  <!-- Submit -->
  <div class="flex justify-end">
    <%= f.submit "Guardar",
          class: "inline-flex items-center px-6 py-3 bg-indigo-600 border border-transparent rounded-md font-semibold text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
