<%= form_with(model: aircraft, class: "contents") do |form| %>
  <% if aircraft.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(aircraft.errors.count, "error") %> prohibited this aircraft from being saved:</h2>

      <ul class="list-disc ml-6">
        <% aircraft.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :model %>
    <%= form.text_field :model, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": aircraft.errors[:identifier].none?, "border-red-400 focus:outline-red-600": aircraft.errors[:identifier].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :identifier%>
    <%= form.text_field :identifier, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": aircraft.errors[:tail_number].none?, "border-red-400 focus:outline-red-600": aircraft.errors[:tail_number].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": aircraft.errors[:status].none?, "border-red-400 focus:outline-red-600": aircraft.errors[:status].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
