<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl w-full space-y-6 bg-white p-10 rounded-lg shadow-lg border border-gray-200">
    <h2 class="text-2xl font-bold text-center text-gray-800">Enviar Disponibilidad Semanal</h2>

    <%= form_with url: availabilities_path, method: :post do %>
      <% (Date::DAYNAMES.rotate(1)).each_with_index do |day, i| %>
        <% index = (i + 1) % 7 %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-1"><%= day %></label>
          <div class="flex space-x-2">
            <% options = (6..22).flat_map do |hour|
              [0, 30].map do |minute|
                time = Time.new(2000, 1, 1, hour, minute)
                label = time.strftime("%H:%M")
                [label, label]
              end
            end %>

            <%= select_tag "availabilities[#{index}][start_time]",
                  options_for_select(options),
                  include_blank: "Seleccionar hora",
                  class: "flex-1 border border-gray-300 rounded-md px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>

            <span class="self-center">a</span>

            <%= select_tag "availabilities[#{index}][end_time]",
                  options_for_select(options),
                  include_blank: "Seleccionar hora",
                  class: "flex-1 border border-gray-300 rounded-md px-3 py-2 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
          </div>
        </div>
      <% end %>
      <% if flash[:alert] %>
  <div class="text-red-600 text-sm mb-2"><%= flash[:alert] %></div>
<% end %>

  <div class="mb-4">
  <label for="availabilities_notes" class="block text-sm font-medium text-gray-700">Notas generales</label>
  <%= text_area_tag "availabilities[notes]", params.dig(:availabilities, :notes), rows: 3,
      required: true,
      class: "mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm",
      placeholder: "Ej: Instructor preferido, vuelo compartido, prueba ACC, etc." %>
</div>


      <div class="pt-4">
        <%= submit_tag "Guardar disponibilidad", class: "w-full bg-blue-600 text-white px-4 py-2 rounded-md font-medium hover:bg-blue-700 transition" %>
      </div>
    <% end %>
  </div>
</div>
