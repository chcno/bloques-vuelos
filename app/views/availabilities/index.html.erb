<h1 class="text-2xl font-bold mb-6 text-center">Disponibilidades de Usuarios</h1>

<% @availabilities_by_role.each do |role, users| %>
  <h2 class="text-xl font-bold mt-8 mb-4 text-indigo-700"><%= role.capitalize %></h2>
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
    <% users.each do |user| %>
      <%= render "availability_card", user: user %>
    <% end %>
  </div>
<% end %>
