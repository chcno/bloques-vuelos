<nav class="bg-white border-b border-gray-200 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path do %>
          <%= image_tag "logo.jpg", alt: "BloquesVuelos", class: "h-12 w-12 rounded-full object-cover" %>
        <% end %>
      </div>

      <!-- Mobile Menu Button -->
      <div class="sm:hidden">
        <button id="mobile-menu-button" class="text-gray-500 hover:text-blue-600 focus:outline-none focus:text-blue-600">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Links -->
      <div class="hidden sm:flex sm:items-center space-x-4">
        <%= link_to "Login", new_user_session_path, class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md text-sm font-medium" %>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="sm:hidden hidden px-4 pb-4">
    <%= link_to "Login", new_user_session_path, class: "block text-gray-700 hover:text-blue-600 py-2" %>
    <%= link_to "Sign Up", new_user_registration_path, class: "block text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md mt-2 text-center" %>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const button = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("mobile-menu");

    button.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  });
</script>
