<% if user_signed_in? %>
<nav class="bg-gray-900 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">

      <!-- Branding -->
      <div class="flex items-center space-x-4">
        <%= link_to root_path, class: "flex items-center space-x-2" do %>
          <%= image_tag "logo.jpg", alt: "Logo", class: "h-10 w-10 rounded-full object-cover" %>
          <span class="text-white text-xl font-bold">✈ Vuelos Escuela</span>
        <% end %>
      </div>

      <!-- Hamburger Button (mobile only) -->
      <div class="md:hidden">
        <button id="menu-toggle" class="text-gray-300 hover:text-white focus:outline-none">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex space-x-2 items-center">
        <%= link_to "Calendario", calendar_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition" %>
        <% if is_admin? %>
          <%= link_to "Usuarios Pendientes", admin_pending_users_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition" %>
          <%= link_to "Todos los Usuarios", admin_users_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition" %>
          <%= link_to "Mantenimientos", admin_maintenances_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition" %>
          <%= link_to "Aviones", aircrafts_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition" %>
          <%= link_to "Bloques de vuelo", flight_blocks_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition" %>
          <%= link_to "Nuevo Bloque", new_flight_block_path, class: "text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition" %>
        <% end %>

        <span class="text-white font-semibold">Soy un <%= current_user.role %></span>
        <span class="text-gray-300">(<%= current_user.email %>)</span>
        <%= button_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "ml-4 inline-block px-3 py-2 rounded-md bg-red-600 text-white text-sm font-medium hover:bg-red-500 transition" %>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="md:hidden hidden mt-4 space-y-2">
      <%= link_to "Calendario", calendar_path, class: "block text-gray-300 hover:text-white px-3 py-2 text-sm" %>
      <% if is_admin? %>
        <%= link_to "Usuarios Pendientes", admin_pending_users_path, class: "block text-gray-300 hover:text-white px-3 py-2 text-sm" %>
        <%= link_to "Todos los Usuarios", admin_users_path, class: "block text-gray-300 hover:text-white px-3 py-2 text-sm" %>
        <%= link_to "Mantenimientos", admin_maintenances_path, class: "block text-gray-300 hover:text-white px-3 py-2 text-sm" %>
        <%= link_to "Aviones", aircrafts_path, class: "block text-gray-300 hover:text-white px-3 py-2 text-sm" %>
        <%= link_to "Bloques de vuelo", flight_blocks_path, class: "block text-gray-300 hover:text-white px-3 py-2 text-sm" %>
        <%= link_to "Nuevo Bloque", new_flight_block_path, class: "block text-gray-300 hover:text-white px-3 py-2 text-sm" %>
      <% end %>
      <div class="px-3 text-sm text-gray-400">Soy un <%= current_user.role %> (<%= current_user.email %>)</div>
      <%= button_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "block w-full text-left px-3 py-2 rounded-md bg-red-600 text-white text-sm font-medium hover:bg-red-500 transition mt-2" %>
    </div>
  </div>
</nav>

<!-- JS para el menú mobile -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggleBtn = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    toggleBtn.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  });
</script>
<% end %>
