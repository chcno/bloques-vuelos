<div class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-extrabold text-gray-800 mb-10">Mi Perfil</h1>

<div class="grid grid-cols-1 md:grid-cols-2 gap-8">    
    <!-- Datos del usuario -->
    <div class="bg-white rounded-lg shadow p-6 border-t-4 border-indigo-600">
      <div class="flex items-center mb-4">
        <div class="p-3 bg-indigo-100 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.672 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h2 class="ml-3 text-lg font-semibold text-gray-700">Mis datos</h2>
      </div>

      <ul class="space-y-2 text-sm text-gray-600">
        <li><span class="font-semibold text-gray-800">Nombre:</span> <%= current_user.name %></li>
        <li><span class="font-semibold text-gray-800">Email:</span> <%= current_user.email %></li>
        <li><span class="font-semibold text-gray-800">Rol:</span> <%= current_user.role %></li>
      </ul>

      <%# link_to "Editar perfil", edit_user_registration_path, class: "mt-4 inline-block text-sm text-indigo-600 hover:text-indigo-800 font-medium" %>
    </div>

    <!-- Próximos vuelos -->
    <div class="bg-white rounded-lg shadow p-6 border-t-4 border-green-500">
      <div class="flex items-center mb-4">
        <div class="p-3 bg-green-100 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l18-9-9 18-9-9z" />
          </svg>
        </div>
        <h2 class="ml-3 text-lg font-semibold text-gray-700">Mis próximos vuelos</h2>
      </div>

      <% if @next_flights.any? %>
        <ul class="space-y-2 text-sm text-gray-600">
          <% @next_flights.each do |fb| %>
            <li>
              <span class="font-semibold text-gray-800"><%= fb.start_time.strftime("%d/%m %H:%M") %></span> –
              <%= fb.aircraft.identifier %> /
              <%= fb.instructor&.name || fb.safety&.name || "N/A" %> /
              <%= fb.student&.name %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 text-sm">No tienes vuelos próximos.</p>
      <% end %>
    </div>

    

  </div>
</div>