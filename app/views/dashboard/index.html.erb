<div class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-extrabold text-gray-800 mb-10">Panel de control</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    
    <!-- Próximos vuelos -->
    <div class="bg-white rounded-lg shadow p-6 border-t-4 border-indigo-600">
      <div class="flex items-center mb-4">
        <div class="p-3 bg-indigo-100 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l18-9-9 18-9-9z" />
          </svg>
        </div>
        <h2 class="ml-3 text-lg font-semibold text-gray-700">Próximos vuelos</h2>
      </div>
      
      <% if @next_flights.any? %>
        <ul class="space-y-2">
          <% @next_flights.each do |fb| %>
            <li class="text-gray-600 text-sm">
              <span class="font-semibold text-gray-800"><%= fb.start_time.strftime("%d/%m %H:%M") %></span> –
              <%= fb.aircraft.identifier %> –
              <%= fb.instructor&.name || fb.safety&.name || "N/A" %> /
              <%= fb.student&.name %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 text-sm">No hay vuelos próximos.</p>
      <% end %>
    </div>

    <!-- Aviones en mantenimiento -->
    <div class="bg-white rounded-lg shadow p-6 border-t-4 border-yellow-500">
      <div class="flex items-center mb-4">
        <div class="p-3 bg-yellow-100 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m2 0a8 8 0 11-16 0 8 8 0 0116 0z" />
          </svg>
        </div>
        <h2 class="ml-3 text-lg font-semibold text-gray-700">Aviones en mantenimiento</h2>
      </div>

      <% if @maintenances.any? %>
        <ul class="space-y-2">
          <% @maintenances.each do |m| %>
            <li class="text-gray-600 text-sm">
              <span class="font-semibold text-gray-800"><%= m.aircraft.identifier %></span>
              hasta
              <%= m.end_time.strftime("%d/%m %H:%M") %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500 text-sm">Todos los aviones están disponibles.</p>
      <% end %>
    </div>

    <!-- Usuarios pendientes -->
    <div class="bg-white rounded-lg shadow p-6 border-t-4 border-red-500">
      <div class="flex items-center mb-4">
        <div class="p-3 bg-red-100 rounded-full">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h2 class="ml-3 text-lg font-semibold text-gray-700">Usuarios pendientes</h2>
      </div>
      <p class="text-4xl font-bold text-gray-800 mb-4"><%= @pending_users.count %></p>
      <%= link_to "Ver usuarios pendientes", admin_pending_users_path, class: "inline-block text-sm text-red-600 hover:text-red-800 font-medium" %>
    </div>

  </div>
</div>
