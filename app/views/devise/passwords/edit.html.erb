    <%= form_with model: resource, url: password_path(resource_name), class: "mt-8 space-y-6" do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
